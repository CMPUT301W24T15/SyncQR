<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="150dp">

    <TextView
        android:id="@+id/login_starting_page_text"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="40dp"
        android:textSize="40dp"
        android:textColor="@color/text_color"
        android:text="Please Select\nYour Role"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/login_attendee_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/button_yellow"
        android:layout_marginLeft="@dimen/extra_large_margin"
        android:layout_marginRight="@dimen/extra_large_margin"
        android:layout_marginBottom="@dimen/large_margin"
        android:textSize="@dimen/button_text_size_large"
        android:textColor="@color/text_color"
        android:text="Attendee"></Button>

    <Button
        android:id="@+id/login_organizer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/button_yellow"
        android:layout_marginLeft="@dimen/extra_large_margin"
        android:layout_marginRight="@dimen/extra_large_margin"
        android:layout_marginBottom="@dimen/large_margin"
        android:textSize="@dimen/button_text_size_large"
        android:textColor="@color/text_color"
        android:text="Organizer"></Button>

    <Button
        android:id="@+id/login_administrator_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/button_yellow"
        android:layout_marginLeft="@dimen/extra_large_margin"
        android:layout_marginRight="@dimen/extra_large_margin"
        android:layout_marginBottom="@dimen/large_margin"
        android:textSize="@dimen/button_text_size_large"
        android:textColor="@color/text_color"
        android:text="Administrator (Scan)"></Button>

